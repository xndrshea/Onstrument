{
    "type": "commonjs",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
        "dev:frontend": "vite",
        "dev:server": "nodemon --watch backend/src -e ts --exec ts-node backend/src/index.ts",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "start": "ts-node src/index.ts --network localhost",
        "build:server": "tsc -p backend/tsconfig.json",
        "db:init": "ts-node backend/src/scripts/initDb.ts",
        "deploy": "anchor deploy --provider.cluster localnet",
        "test": "anchor test --provider.cluster localnet"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.2.4",
        "@chakra-ui/react": "^3.2.0",
        "@coral-xyz/anchor": "^0.30.1",
        "@emotion/react": "^11.13.5",
        "@emotion/styled": "^11.13.5",
        "@raydium-io/raydium-sdk": "^1.3.1-beta.58",
        "@solana/wallet-adapter-base": "^0.9.23",
        "@solana/wallet-adapter-react": "^0.15.35",
        "@solana/wallet-adapter-react-ui": "^0.9.34",
        "@solana/wallet-adapter-wallets": "^0.19.23",
        "@solana/web3.js": "^1.87.0",
        "@types/chart.js": "^2.9.41",
        "@types/react-router-dom": "^5.3.3",
        "axios": "^1.7.7",
        "bs58": "^6.0.0",
        "chart.js": "^4.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "framer-motion": "^11.11.17",
        "helmet": "^7.1.0",
        "lightweight-charts": "^4.2.2",
        "pg": "^8.11.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^7.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "@types/pg": "^8.10.9",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.0",
        "nodemon": "^3.0.2",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.16",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.8"
    }
}
