{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "../dist/backend",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "..",
        "paths": {
            "shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}