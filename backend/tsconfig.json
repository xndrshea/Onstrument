{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "..",
        "paths": {
            "shared/*": [
                "shared/*"
            ]
        },
        "noImplicitAny": false,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}